<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutPane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pool_table"
    tools:context="com.pothiwala.atirek.accelerometerapp.MainActivity">

    <ImageView
        android:id="@+id/iv_hole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/hole"
        android:tint="#000" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#33FFFFFF"
        android:text="Retry"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_fire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#33FFFFFF"
        android:text="Fire"
        android:visibility="visible" />


</RelativeLayout>
